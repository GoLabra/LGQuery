{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Example",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/example/index.ts",
            "runtimeArgs": [
                "-r",
                "ts-node/register"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "env": {
                "TS_NODE_PROJECT": "${workspaceFolder}/tsconfig.json"
            },
            "sourceMaps": true,
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ]
        }
    ]
}
